<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    用户收藏 MyBatis Mapper XML 配置文件

    @author CryptoRate Team
    @version 1.0
    @since 2026-02-27
-->
<mapper namespace="com.cryptorate.mapper.UserFavoriteMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.cryptorate.entity.UserFavorite">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="symbol" property="symbol" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, user_id, symbol, created_at
    </sql>

    <!-- 插入收藏记录 -->
    <insert id="insert" parameterType="com.cryptorate.entity.UserFavorite"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_favorite (user_id, symbol, created_at)
        VALUES (#{userId}, #{symbol}, #{createdAt})
    </insert>

    <!-- 根据用户ID和币种删除收藏 -->
    <delete id="deleteByUserIdAndSymbol">
        DELETE FROM user_favorite
        WHERE user_id = #{userId} AND symbol = #{symbol}
    </delete>

    <!-- 查询用户的所有收藏记录 -->
    <select id="selectByUserId" parameterType="java.lang.Long"
            resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_favorite
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <!-- 查询用户是否已收藏某币种 -->
    <select id="selectByUserIdAndSymbol" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_favorite
        WHERE user_id = #{userId} AND symbol = #{symbol}
    </select>

    <!-- 查询用户已收藏的所有币种代码 -->
    <select id="selectSymbolsByUserId" parameterType="java.lang.Long"
            resultType="java.lang.String">
        SELECT symbol
        FROM user_favorite
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

</mapper>
