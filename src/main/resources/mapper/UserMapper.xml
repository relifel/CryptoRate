<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    用户表 MyBatis Mapper XML 配置文件
    
    对应接口: com.cryptorate.mapper.UserMapper
    对应表: user
    
    @author CryptoRate Team
    @version 1.0
    @since 2026-02-13
-->
<mapper namespace="com.cryptorate.mapper.UserMapper">

    <!-- ========================================
         结果映射
         ======================================== -->
    
    <!-- 用户结果映射 -->
    <resultMap id="BaseResultMap" type="com.cryptorate.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- ========================================
         SQL 片段
         ======================================== -->
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, username, password, email, created_at
    </sql>

    <!-- ========================================
         插入操作
         ======================================== -->
    
    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.cryptorate.entity.User" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username,
            password,
            email,
            created_at
        ) VALUES (
            #{username},
            #{password},
            #{email},
            #{createdAt}
        )
    </insert>

    <!-- ========================================
         删除操作
         ======================================== -->
    
    <!-- 根据 ID 删除用户 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

    <!-- ========================================
         更新操作
         ======================================== -->
    
    <!-- 更新用户信息（动态 SQL，只更新非空字段） -->
    <update id="update" parameterType="com.cryptorate.entity.User">
        UPDATE user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- ========================================
         查询操作
         ======================================== -->
    
    <!-- 根据 ID 查询用户 -->
    <select id="selectById" parameterType="java.lang.Long" 
            resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM user
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" 
            resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM user
        WHERE username = #{username}
    </select>

    <!-- 检查用户名是否存在 -->
    <select id="existsByUsername" parameterType="java.lang.String" 
            resultType="java.lang.Boolean">
        SELECT COUNT(1) > 0
        FROM user
        WHERE username = #{username}
    </select>

</mapper>
